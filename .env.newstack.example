# MongoDB Configuration - REQUIRED
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
MONGO_INITDB_DATABASE=nursery_db

# Spring Boot Configuration
# Update the password in the URI to match MONGO_INITDB_ROOT_PASSWORD
SPRING_DATA_MONGODB_URI=mongodb://admin:CHANGE_THIS_TO_A_STRONG_PASSWORD@mongodb:27017/nursery_db?authSource=admin
SPRING_DATA_MONGODB_DATABASE=nursery_db

# JWT Configuration - CRITICAL SECURITY SETTING
# Generate a strong random secret key of at least 256 bits (32+ characters)
# You can generate one using: openssl rand -base64 32
# NEVER use the example below in production!
JWT_SECRET=GENERATE_YOUR_OWN_256_BIT_SECRET_KEY_NEVER_USE_THIS_EXAMPLE
JWT_EXPIRATION=86400000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200
